extends ../layouts/common.pug

block content
    h1 Users List

    .d-flex.align-items-center
        a.btn.btn-primary(href="/users/create") Create new user
        hr 
        form.ml-auto(action="/users/search",method="get")
            input(type="text" name='name')
            button(type="submit") Summit

    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Actions
        each user in users
            tr
                td
                    img(src=user.avatar, width='50px')
                td= user.name
                td= user.phone
                td
                    a.btn.btn-light(href="/users/" + user.id) View